<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/heading_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:paddingLeft="6dp"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/tv_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Trip Status"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alignmentMode="alignBounds"
                android:columnCount="2"
                android:rowCount="2">

                <TextView
                    android:id="@+id/tripDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:drawableLeft="@drawable/time"
                    android:drawablePadding="7dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="0 hours 0 minutes"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:paddingRight="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/blinkText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:drawableLeft="@drawable/head"
                        android:drawablePadding="7dp"
                        android:padding="3dp"
                        android:text=""
                        android:textSize="18sp"/>

                    <ProgressBar
                        android:id="@+id/energyLevel"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:paddingTop="5dp"
                        android:progress="0"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/stopsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:drawableLeft="@drawable/bench"
                    android:drawablePadding="7dp"
                    android:gravity="start"
                    android:padding="3dp"
                    android:text="0 stops"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/distanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/distance"
                    android:drawablePadding="7dp"
                    android:padding="3dp"
                    android:text="0 km"
                    android:textSize="18sp"/>
            </GridLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/map"
                  android:name="com.google.android.gms.maps.SupportMapFragment"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:onClick="openRecommendations"
            android:text="Take A Break"
            android:theme="@style/MyTheme"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/eyeStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Eye status"
        android:textSize="30dp"
        android:visibility="gone"/>

    <!--<au.edu.unimelb.mc.trippal.camera.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <au.edu.unimelb.mc.trippal.camera.GraphicOverlay
          android:id="@+id/faceOverlay"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />

    </au.edu.unimelb.mc.trippal.camera.CameraSourcePreview>
    -->
</LinearLayout>
