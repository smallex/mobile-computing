<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/blinkText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blinking count:"
        android:textSize="30dp"
        android:padding="10dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/currentTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Driving Time: 00:00:00"
        android:textSize="30dp"
        android:padding="10dp"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/map"
                  android:name="com.google.android.gms.maps.SupportMapFragment"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Take A Break"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/eyeStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eye status"
        android:textSize="30dp"
        android:gravity="center"
        android:visibility="gone"/>

    <!--<au.edu.unimelb.mc.trippal.camera.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <au.edu.unimelb.mc.trippal.camera.GraphicOverlay
          android:id="@+id/faceOverlay"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />

    </au.edu.unimelb.mc.trippal.camera.CameraSourcePreview>
    -->
</LinearLayout>
